<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    tools:context=".ui.book.BookDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImageThumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:background="@color/imageBackgroundColor"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvBookTitle"
                style="@style/BookDetailTextView"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Book Title" />

            <TextView
                android:id="@+id/tvBookCategory"
                style="@style/BookDetailTextView"
                tools:text="Book Category" />

            <TextView
                android:id="@+id/tvBookDescription"
                style="@style/BookDetailTextView"
                tools:text="Book Description" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
